# Application Configuration
APP_NAME=example-project
NODE_ENV=development
SERVER_PORT=3000

# CORS Configuration
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=example_project_db

# Frontend URL (for CORS and future frontend integration)
EXAMPLE_PROJECT_FRONT_URL=http://localhost:4200

# API URL
EXAMPLE_PROJECT_API_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

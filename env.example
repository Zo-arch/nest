# Throttler (Rate Limiting)
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Apple Sign In
APPLE_CLIENT_ID=com.yourcompany.yourapp